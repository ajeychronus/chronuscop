<h1 class="heading"><%= @project.name %></h1>
<hr>
<%= form_tag(manage_project_translations_path(@project), :method => "get") do %>
  <%= label_tag(:language, "Choose language") %><br/>

  <% options_array = Array.new %>
  <% langs_arr = @project.languages.split(/:/) %>
  <% for i in 0..(langs_arr.size-1) do %>
  <%  options_array[i] = [Language.find_by_id(langs_arr[i]).name,langs_arr[i]] %>
  <% end %>
  <%= select_tag(:language,options_for_select(options_array)) %>
  <%= submit_tag("Manage") %>
<% end %>

<br/>
<%= form_tag(addlanguage_project_path(@project), :method => "get") do %>
  <%= label_tag(:language, "Add language")%><br/>
  <%= select_tag(:language,options_from_collection_for_select(Language.all, :id, :name)) %>
  <%= submit_tag("Add") %>
<% end %>
<hr>
<% if(@project.translations.count == 0) then %>
<%= "No translations added yet" %><br/>
<% else %>

<h3>All translations in this project.</h3>
<div id="translations">
  <table border="1">
    <tr>
      <td class="heading"><b>key</b></td>
      <td class="heading"><b>value</b></td>
    </tr>
    <% @project.translations.each do |t| %>
      <tr>
        <td><%= t.key %></td>
        <td><%= t.value %></td>
      </tr>
    <% end %>
  </table>
</div>
<% end %>


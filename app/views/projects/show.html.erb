<h1 class="heading"><%= @project.name %></h1>
<hr>
<%= form_tag(project_translations_path(@project), :method => "get") do %>
  <%= label_tag(:edit_lang, "Choose language") %>
  <%= submit_tag("Manage") %>
<% end %>


<%= link_to "Manage Translations",project_translations_path(@project) %>
<hr>
<% if(@project.translations.count == 0) then %>
<%= "No translations added yet" %><br/>
<% else %>

<h3>All translations in this project.</h3>
<div id="translations">
  <table border="1">
    <tr>
      <td class="heading"><b>key</b></td>
      <td class="heading"><b>value</b></td>
    </tr>
    <% @project.translations.each do |t| %>
      <tr>
        <td><%= t.key %></td>
        <td><%= t.value %></td>
      </tr>
    <% end %>
  </table>
</div>
<% end %>

